<UserControl x:Class="MCC_Launcher.Views.OptionModal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCC_Launcher.Views"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             mc:Ignorable="d"
             xmlns:ViewModels="clr-namespace:MCC_Launcher.ViewModels"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <ViewModels:MainViewModel />
    </UserControl.DataContext>
    <Grid>
        
        <Border Background="#15171E">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0"
                       Source="/Images/Resize image project.png" />
                <DockPanel Grid.Column="1">
                    <dxe:ListBoxEdit SelectionMode="Single"
                                     DockPanel.Dock="Top"
                                     Margin=" 20"
                                     Background="#15171E" Foreground="White">
                        <dxe:ListBoxEdit.StyleSettings>
                            <dxe:RadioListBoxEditStyleSettings />
                        </dxe:ListBoxEdit.StyleSettings>
                        <dxe:ListBoxEditItem Content="{Binding SelectedOption }">

                            
                        </dxe:ListBoxEditItem>
                        <dxe:ListBoxEditItem Content="OptionB" />

                    </dxe:ListBoxEdit>
                    <Button Style="{StaticResource startbtn }" Background="#0074E0" DockPanel.Dock="Bottom" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="50" Height="30" Margin="0 0 20 20" Content="완료"></Button>

                </DockPanel>

            </Grid>

        </Border>
            
    </Grid>
</UserControl>
